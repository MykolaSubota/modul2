<!DOCTYPE html>
<html>
  <head>
    <title>Catalog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= link_to 'Всі  продукти', products_path %>    

    <%= link_to 'Нові продукти', new_product_path %>

      <% if user_signed_in? %>
    <%= link_to 'Вихід', destroy_user_session_path, method: :delete %>
    <% else %>
    <%= link_to 'Вхід', new_user_session_path %>
    <%= link_to 'Реєстація', new_user_registration_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
