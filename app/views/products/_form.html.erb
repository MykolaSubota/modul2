<%= form_for @product do |f| %>
    <div class="form-control">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div class="form-control">
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>

    <div class="form-control">
        <%= f.label :price %>
        <%= f.text_area :price %>
    </div>

    <div class="form-control">
        <%= f.submit 'Сохранити' %>
    </div>
<% end %>